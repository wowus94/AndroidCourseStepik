<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextViewStyle">
        <item name="android:textSize">@dimen/title_text_size_24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="QuestionTextViewStyle">
        <item name="android:textSize">@dimen/question_text_size_48sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="OptionTextViewStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ServiceButtonStyle">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="DescriptionTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="NameTitleStyle">
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:background">@color/background_color_gray</item>
        <item name="android:padding">@dimen/padding_8dp</item>
    </style>

    <style name="DescriptionTitleStyle">
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:background">@color/background_color_light_gray</item>
        <item name="android:padding">@dimen/padding_8dp</item>
    </style>
</resources>